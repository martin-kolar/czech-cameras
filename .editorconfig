# .editorconfig file helps developers define and maintain
# consistent coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 2

[*.css]
indent_style = spaces
indent_size = 2

[*.html]
indent_style = tab
indent_size = 2

[*.neon]
indent_style = tab
indent_size = 2
